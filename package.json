{
  "name": "ynor-extension",
  "version": "1.0.0",
  "description": "Ynor - The future-proof HTML extension language",
  "main": "ynor-runtime.js",
  "scripts": {
    "dev": "ynor-cli serve",
    "build": "ynor-cli build",
    "preview": "ynor-cli preview",
    "test": "jest",
    "lint": "eslint . --ext .js,.ynor",
    "format": "prettier --write \"**/*.{js,ynor,json,css,html}\"",
    "prepare": "husky install"
  },
  "dependencies": {
    "ynor-runtime": "./ynor-runtime.js",
    "ynor-core": "^1.0.0",
    "ynor-router": "^1.0.0",
    "ynor-state": "^1.0.0",
    "ynor-http": "^1.0.0",
    "vue": "^3.2.0",            
    "marked": "^4.0.0",          
    "prismjs": "^1.27.0",         
    "lodash": "^4.17.21",         
    "date-fns": "^2.28.0",        
    "axios": "^0.27.0"            
  },
  "devDependencies": {
    "ynor-cli": "^1.0.0",
    "ynor-compiler": "^1.0.0",
    "ynor-loader": "^1.0.0",
    "ynor-server": "^1.0.0",
    "ynor-vscode": "^1.0.0",
    
    "webpack": "^5.72.0",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.9.0",
    "html-webpack-plugin": "^5.5.0",
    "css-loader": "^6.7.1",
    "style-loader": "^3.3.1",
    "sass-loader": "^13.0.0",
    "postcss-loader": "^7.0.0",
    "babel-loader": "^8.2.5",
    
    "@babel/core": "^7.17.10",
    "@babel/preset-env": "^7.17.10",
    
    "jest": "^28.1.0",
    "ynor-test-utils": "^1.0.0",
    "@testing-library/jest-dom": "^5.16.4",
    "jest-environment-jsdom": "^28.1.0",
    
    "eslint": "^8.15.0",
    "eslint-plugin-ynor": "^1.0.0",
    "prettier": "^2.6.2",
    "eslint-config-prettier": "^8.5.0",
    
    "husky": "^8.0.1",
    "lint-staged": "^12.4.1",
    
    "typescript": "^4.6.4",
    "@types/node": "^17.0.35"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "moduleFileExtensions": ["js", "ynor"],
    "transform": {
      "^.+\\.ynor$": "ynor-test-utils/transformer",
      "^.+\\.js$": "babel-jest"
    },
    "testEnvironment": "jsdom"
  },
  "lint-staged": {
    "*.{js,ynor}": ["eslint --fix", "prettier --write"],
    "*.{json,css,html}": ["prettier --write"]
  }
}
